<Controls:MetroWindow x:Class="evideoteka.addNewTitle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj titl" Height="300" Width="300"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        GlowBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBox x:Name="txtBoxName" HorizontalAlignment="Left" Height="23" Margin="85,48,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Label Content="Jezik" HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top"/>
        <Label Content="Putanja" HorizontalAlignment="Left" Margin="10,95,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnAddTitle" Content="Dodaj" HorizontalAlignment="Left" Margin="104,171,0,0" VerticalAlignment="Top" Width="75" Click="btnAddTitle_Click"/>
        <Button x:Name="btnClose" Content="Natrag" HorizontalAlignment="Left" Margin="104,220,0,0" VerticalAlignment="Top" Width="75" Click="btnClose_Click"/>
        <Button x:Name="btnFindTitle" Content="Dodaj titl" HorizontalAlignment="Left" Margin="85,104,0,0" VerticalAlignment="Top" Width="120" Click="btnFindTitle_Click"/>

    </Grid>
</Controls:MetroWindow>
