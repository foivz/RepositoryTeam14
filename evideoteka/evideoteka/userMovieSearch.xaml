<Controls:MetroWindow x:Class="evideoteka.userMovieSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Pretraga filmova" Height="300" Width="334.328"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        GlowBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen">              
    <Grid Margin="0,0,-8,0">
        <ListBox x:Name="listBoxSearch" HorizontalAlignment="Left" Height="249" Margin="166,10,0,0" VerticalAlignment="Top" Width="158" MouseDoubleClick="listBoxSearch_MouseDoubleClick"  />
        <TextBox x:Name="txtBoxSearchName" HorizontalAlignment="Left" Height="23" Margin="10,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="btnSearchName" Content="Pretraga naziv " HorizontalAlignment="Left" Margin="37,74,0,0" VerticalAlignment="Top" Width="95" Click="btnSearchName_Click"/>
        <TextBox x:Name="txtBoxSearchActor" HorizontalAlignment="Left" Height="23" Margin="10,148,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <Button x:Name="btnSearchActor" Content="Pretraga glumac" HorizontalAlignment="Left" Margin="37,191,0,0" VerticalAlignment="Top" Width="95" Click="btnSearchActor_Click"/>

    </Grid>
</Controls:MetroWindow>
