<Window x:Class="evideoteka.userMovieSearch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="userMovieSearch" Height="300" Width="300">
    <Grid>
        <ListBox x:Name="listBoxSearch" HorizontalAlignment="Left" Height="249" Margin="166,10,0,0" VerticalAlignment="Top" Width="116" MouseDoubleClick="listBoxSearch_MouseDoubleClick"/>
        <TextBox x:Name="txtBoxSearchName" HorizontalAlignment="Left" Height="23" Margin="10,26,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="btnSearchName" Content="Pretraga naziv " HorizontalAlignment="Left" Margin="37,67,0,0" VerticalAlignment="Top" Width="95" Click="btnSearchName_Click"/>
        <TextBox x:Name="txtBoxSearchActor" HorizontalAlignment="Left" Height="23" Margin="10,127,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="151"/>
        <Button x:Name="btnSearchActor" Content="Pretraga glumac" HorizontalAlignment="Left" Margin="37,209,0,0" VerticalAlignment="Top" Width="95" Click="btnSearchActor_Click"/>

    </Grid>
</Window>
