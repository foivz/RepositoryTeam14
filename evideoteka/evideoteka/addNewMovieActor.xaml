<Controls:MetroWindow x:Class="evideoteka.addNewMovieActor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj glumca" Height="300" Width="300"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        GlowBrush="{DynamicResource AccentColorBrush}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ListBox x:Name="listBoxMovie" HorizontalAlignment="Left" Height="59" Margin="99,43,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox x:Name="listBoxActor" HorizontalAlignment="Left" Height="57" Margin="99,107,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="0.183,0.269"/>
        <Button x:Name="btnAddMovieActor" Content="Dodaj" HorizontalAlignment="Left" Margin="99,181,0,0" VerticalAlignment="Top" Width="100" Click="btnAddMovieActor_Click"/>
        <Button x:Name="btnEnd" Content="Natrag" HorizontalAlignment="Left" Margin="99,222,0,0" VerticalAlignment="Top" Width="100" Click="btnEnd_Click"/>
        <Label Content="Film" HorizontalAlignment="Left" Margin="31,52,0,0" VerticalAlignment="Top"/>
        <Label Content="Glumac" HorizontalAlignment="Left" Margin="31,108,0,0" VerticalAlignment="Top"/>

    </Grid>
</Controls:MetroWindow>
