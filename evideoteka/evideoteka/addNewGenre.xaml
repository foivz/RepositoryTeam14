<Window x:Class="evideoteka.addNewGenre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="addNewGenre" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="txtBoxName" HorizontalAlignment="Left" Height="23" Margin="97,73,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtBoxDescription" HorizontalAlignment="Left" Height="23" Margin="97,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnAddGenre" Content="Dodaj" HorizontalAlignment="Left" Margin="117,188,0,0" VerticalAlignment="Top" Width="75" Click="btnAddGenre_Click"/>
        <Button x:Name="btnClose" Content="Kraj" HorizontalAlignment="Left" Margin="117,226,0,0" VerticalAlignment="Top" Width="75" Click="btnClose_Click"/>
        <Label Content="Naziv" HorizontalAlignment="Left" Margin="26,78,0,0" VerticalAlignment="Top"/>
        <Label Content="Opis" HorizontalAlignment="Left" Margin="26,126,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
